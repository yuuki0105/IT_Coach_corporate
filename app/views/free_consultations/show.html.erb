<% content_for :title, "無料オンライン相談 | 株式会社IT Coach" %>
<% content_for :meta_description, "無料オンライン相談ページです。「社内にSNS・Web活用のノウハウがなく困っている」「IT・Webについては外注しており社内にノウハウが残らない」という企業様はお無料オンライン相談ください。" %>
<% content_for :meta_keywords, "SNSマーケティング,EC・ネットショップ,Webマーケティング,Web制作,Webコンサル,ECコンサル,Webディレクション,戦略,企画,内製化,インハウス" %>
<% content_for :og_title, "無料オンライン相談 | 株式会社IT Coach" %>
<% content_for :og_description, "無料オンライン相談ページ" %>

<div class="space-y-8 sm:space-y-12 bg-backgroundGray pt-4 sm:pt-6 pb-20 sm:pb-30">
  <div class="py-12 sm:py-20 bg-white px-5 sm:px-30">
    <div class="text-center">
      <h1 class="h1_text">無料オンライン相談</h1>

      <div class="bg-primaryPale p-3 sm:p-6 text-center sm:w-1/2 mx-auto mt-12">

        <h4 class="h4_text">無料オンライン相談でできること</h4>
        <ul class="text-left sm:text-lg space-y-2 mt-4">
          <li>✔︎事前準備は不要</li>
          <li>✔︎オンライン面談（Zoom・電話など）</li>
          <li>✔︎所要時間30分〜60分程度 </li>
          <li>✔︎貴社のIT・Web課題について個別に相談できる</li>
        </ul>
      </div>

      <p class="base_text mt-8 sm:mt-12">サービスにご興味をもっていただきありがとうございます。以下のフォームよりご入力ください。</p>
      <p class="sub_text mt-3">※すべて必須入力（「その他」の項目を除く）</p>
    </div>

    <%= form_with model: @form, url: free_consultation_path, local: true, method: :post, class: "space-y-16" do |form| %>

      <%= render "shared/errors", model: @form %>

      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :name, "名前", class: "form_label" %>
          <span class="sub_text">（必須）</span>
        </div>
        <%= form.text_field :name, placeholder: "名前", class: "text_field w-full sm:w-6/12", id: "free_consultation_name" %>
      </div>
      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :company, "会社名", class: "form_label" %>
          <span class="sub_text">（必須）</span>
        </div>
        <%= form.text_field :company, placeholder: "会社名", class: "text_field w-full sm:w-6/12", id: "free_consultation_company" %>
      </div>
      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :role, "役職", class: "form_label" %>
          <span class="sub_text">（必須）</span>
        </div>
        <%= form.text_field :role, placeholder: "役職", class: "text_field w-full sm:w-6/12", id: "free_consultation_role" %>
      </div>
      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :email, "メールアドレス", class: "form_label" %>
          <span class="sub_text">（必須）</span>
        </div>
        <%= form.text_field :email, placeholder: "メールアドレス", class: "text_field w-full sm:w-6/12", id: "free_consultation_mail" %>
      </div>
      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :telephone, "電話番号", class: "form_label" %>
          <span class="sub_text">（必須）</span>
        </div>
        <%= form.text_field :telephone, placeholder: "電話番号", class: "text_field w-full sm:w-6/12", id: "free_consultation_telephone" %>
      </div>

      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.label :other, "その他", class: "form_label" %>
          <span class="sub_text">（任意：200文字以内）</span>
        </div>
        <%= form.text_area :other, placeholder: "その他問い合わせ事項がありましたらご記入ください。", rows: 4, class: "text_field w-full sm:w-6/12", maxlength: 255, id: "free_consultation_other" %>
      </div>

      <div class="space-y-4">
      <div class="flex items-center space-x-4">
        <%= form.check_box :privacy, class: "text_field inline-block w-6 h-6", id: "free_consultation_privacy" %>
        <%= form.label :privacy, "プライバシーポリシーに同意する", class: "base_text" %>
      </div>
        <p class="sub_text underline cursor-pointerr"><%= link_to "プライバシーポリシーはこちら", privacy_path %></p>
      </div>

      <%= form.submit "送信する", class: "button_gradation bg_gradation", id: "free_consultation_submit" %>

    <% end %>

  </div>
</div>