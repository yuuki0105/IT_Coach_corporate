<!DOCTYPE html>
<html>
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-P6LCWBD');</script>
    <!-- End Google Tag Manager -->

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if content_for? :title %>
      <title><%= yield :title %></title>
    <% else %>
      <title>株式会社IT Coach</title>
    <% end %>

    <% if content_for? :meta_description %>
      <meta name="description" content="<%= yield :meta_description %>">
    <% else %>
      <meta name="description" content="株式会社IT Coachのコーポレイトサイトです。">
    <% end %>

    <meta name="keywords" content="SNSマーケティング,EC・ネットショップ,Webマーケティング,Web制作,ITコーチ,ITコンサル,内製化,インハウス<%= yield :meta_keywords if content_for? :meta_keywords %>" />
    <meta property="og:site_name" content="IT Coach">

    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= "#{root_url.chop}#{request.path_info}" %>">

    <% if content_for? :og_title %>
      <meta property="og:title" content="<%= yield :og_title %>">
    <% else %>
      <meta property="og:title" content="株式会社IT Coach">
    <% end %>

    <% if content_for? :og_description %>
      <meta property="og:description" content="<%= yield :og_description %>" />
    <% else %>
      <meta property="og:description" content="SNS・EC・WebマーケティングにプロのITコーチが伴走" />
    <% end %>

    <!-- OGP -->
    <meta property="og:image" content="<%= "#{root_url}/top_ogp.png" %>">
    <!-- FacebookのOGP -->
    <meta name="" content="" />
    <!-- TwitterのOGP -->
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
    <%= yield :javascripts %>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P6LCWBD"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <%= render "shared/header" %>
    <div class="sm:mx-auto pt-16 sm:pt-20">
      <%= yield %>
    </div>
    <%= render "shared/footer" %>
  </body>
</html>